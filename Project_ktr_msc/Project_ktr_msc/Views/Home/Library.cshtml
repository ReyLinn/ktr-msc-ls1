@model Project_ktr_msc.Entities.Profiles.Library
@{
    ViewData["Title"] = " Your Library";
}
<h1>@ViewData["Title"]</h1>
<h2>Add a profile</h2>
<form asp-controller="Home" asp-action="AddProfileToUserLibrary" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="name" placeholder="Enter the name">
    </div>
    <div class="form-group">
        <label for="CompanyName">Company name</label>
        <input type="text" class="form-control" id="CompanyName" name="companyName" placeholder="Enter the Company Name">
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="emailAdress" placeholder="Enter the email">
    </div>
    <div class="form-group">
        <label for="TelephoneNumber">Phone number</label>
        <input type="number" class="form-control" id="TelephoneNumber" name="phoneNumber" placeholder="Enter the phone number">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br />
<hr />
<br />
@if (Model.Profiles.Count > 0)
{
    for (int i = 0; i < Model.Profiles.Count(); i++)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Profile @(i+1) </h5>
                    <p class="card-text">Name : @Model.Profiles.ElementAt(i).Name</p>
                    <p class="card-text">Company name : @Model.Profiles.ElementAt(i).CompanyName</p>
                    <p class="card-text">Email adress : @Model.Profiles.ElementAt(i).EmailAdress</p>
                    <p class="card-text">Phone number : @Model.Profiles.ElementAt(i).TelephoneNumber</p>
                </div>
            </div>
        </div>
        <hr />
    }
}