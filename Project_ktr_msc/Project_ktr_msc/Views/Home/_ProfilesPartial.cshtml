@model IEnumerable<Project_ktr_msc.Entities.Profiles.Profile>

@for (int i = 0; i < Model.Count() / 3; i++)
{
    <div class="row">
        @for (int j = 0; j < 3; j++)
        {
            var element = i + j;
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Profile @element </h5>
                        <p class="card-text">Name : @Model.ElementAt(element).Name</p>
                        <p class="card-text">Company name : @Model.ElementAt(element).CompanyName</p>
                        <p class="card-text">Email adress : @Model.ElementAt(element).EmailAdress</p>
                        <p class="card-text">Phone number : @Model.ElementAt(element).TelephoneNumber</p>
                    </div>
                </div>
            </div>
}
    </div>
}