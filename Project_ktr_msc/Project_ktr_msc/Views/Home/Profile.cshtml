@model ProfileViewModel
@{
    ViewData["Title"] = " Your profile";
}
<h1>@ViewData["Title"]</h1>
@Html.HiddenFor(p => Model.Profile.Id)
@if (Model.IsProfileCreated)
{
    <p>Name : @Model.Profile.Name</p>
    <p>Company Name : @Model.Profile.CompanyName</p>
    <p>Email adress : @Model.Profile.EmailAdress</p>
    <p>Phone number : @Model.Profile.TelephoneNumber</p>
}
else
{
    <h2>Add your profile</h2>
    <form asp-controller="Home" asp-action="AddProfileToUser" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="name" placeholder="Enter your name">
        </div>
        <div class="form-group">
            <label for="CompanyName">Company Name</label>
            <input type="text" class="form-control" id="CompanyName" name="companyName" placeholder="Enter your Company Name">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="emailAdress" placeholder="Enter you email">
        </div>
        <div class="form-group">
            <label for="TelephoneNumber">Phone Number</label>
            <input type="number" class="form-control" id="TelephoneNumber" name="phoneNumber" placeholder="Enter your phone number">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
